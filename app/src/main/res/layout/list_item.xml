<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/activity_horizontal_margin">
	<!--한 줄에 여러개의 list 아이템을 보여주기 위함-->
	
	<!--예쁘게 커스텀 & 삭제 & 수정 버튼  -->
	
	<View
		android:id="@+id/view"
		android:layout_width="0dp"
		android:layout_height="@dimen/nav_header_height"
		android:padding="@dimen/activity_horizontal_margin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/list_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/activity_horizontal_margin"
		android:text="title"
		android:textSize="25dp"
		android:textStyle="bold"
		app:layout_constraintEnd_toStartOf="@+id/list_time"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/list_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:drawableStart="@drawable/ic_list_watch"
		android:gravity="center_vertical"
		android:text="100분"
		android:textSize="20dp"
		app:layout_constraintBottom_toBottomOf="@+id/list_title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/list_title"
		app:layout_constraintTop_toTopOf="@+id/list_title"/>
	
	<View
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/colorAccent"
		app:layout_constraintBottom_toTopOf="@+id/list_content"
		app:layout_constraintEnd_toEndOf="@+id/list_content"
		app:layout_constraintStart_toStartOf="@+id/list_content"
		app:layout_constraintTop_toBottomOf="@+id/list_title"/>
	
	
	<TextView
		android:id="@+id/list_content"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="@dimen/activity_horizontal_margin"
		android:text="내용을 입력하세요"
		app:layout_constraintBottom_toTopOf="@+id/view2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/list_title"/>
	
	<View
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/colorAccent"
		app:layout_constraintBottom_toTopOf="@+id/view2"
		app:layout_constraintEnd_toEndOf="@+id/list_content"
		app:layout_constraintStart_toStartOf="@+id/list_content"
		app:layout_constraintTop_toBottomOf="@+id/list_content"
		/>
	
	<View
		android:id="@+id/view2"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:layout_margin="@dimen/activity_horizontal_margin"
		app:layout_constraintBottom_toBottomOf="@+id/view"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>
	
	<TextView
		android:id="@+id/list_date"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/activity_horizontal_margin"
		android:text="2017-07-26 10:03:30"
		app:layout_constraintBottom_toBottomOf="@+id/view2"
		app:layout_constraintEnd_toStartOf="@+id/list_edit_bt"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/view2"/>
	
	
	<TextView
		android:id="@+id/list_edit_bt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:drawableStart="@drawable/ic_list_edit"
		android:gravity="center_vertical"
		android:text="수정"
		app:layout_constraintBottom_toBottomOf="@+id/view2"
		app:layout_constraintEnd_toStartOf="@+id/list_delete_bt"
		app:layout_constraintStart_toEndOf="@+id/list_date"
		app:layout_constraintTop_toTopOf="@+id/view2"/>
	
	<TextView
		android:id="@+id/list_delete_bt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:drawableStart="@drawable/ic_list_delete"
		android:gravity="center_vertical"
		android:text="삭제"
		app:layout_constraintBottom_toBottomOf="@+id/view2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/list_edit_bt"
		app:layout_constraintTop_toTopOf="@+id/view2"/>
	
	
